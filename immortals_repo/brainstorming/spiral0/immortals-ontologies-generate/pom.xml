<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0          http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<parent>
		<groupId>com.securboration</groupId>
		<artifactId>immortals</artifactId>
		<version>r1.0.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	
	
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>com.securboration</groupId>
	<artifactId>immortals-ontologies-generate</artifactId>
	<packaging>jar</packaging>
	
	<name>IMMoRTALS ontology generation project (schema + vocabulary)</name>
	<url>https://dsl-external.bbn.com/tracsvr/immortals</url>

	<!-- 
	virtual dependency on immortals-api to ensure it gets built before this module 
	(this configuration will pick up any compilation problems before we attempt to generate triples)
	-->
	<dependencies>
		<dependency>
			<groupId>com.securboration</groupId>
			<artifactId>immortals-ontologies-vocab</artifactId>
			<version>${immortals.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.securboration</groupId>
			<artifactId>immortals-ontologies-vocab-instances</artifactId>
			<version>${immortals.version}</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>com.securboration</groupId>
			<artifactId>immortals-object-to-triples</artifactId>
			<version>${immortals.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-compress</artifactId>
			<version>${commons-compress.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.ow2.asm</groupId>
			<artifactId>asm-debug-all</artifactId>
			<version>${asm.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>${json.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>${commons-io.version}</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	

	<properties>
		<root-path>..</root-path>
		<local-repo-root>${project.basedir}/../../..</local-repo-root>
	</properties>


	<repositories>
		<!-- blank -->
	</repositories>

	<profiles>
		<!-- blank -->
	</profiles>

	<build>
		<defaultGoal>install</defaultGoal>

		<plugins>

			<!--
			Add the ontology API source to this project's build path
			(so our Maven plugin can generate triples from it)
			-->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.10</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${project.basedir}/../immortals-ontologies-vocab/src/main/java</source>
								<source>${project.basedir}/../immortals-ontologies-vocab-instances/src/main/java</source>
							</sources>
						</configuration>
					</execution>
					<execution>
						<id>add-resource</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>add-resource</goal>
						</goals>
						<configuration>
							<resources>
								<resource>
									<directory>${project.basedir}/../immortals-ontologies-static</directory>
									<targetPath></targetPath>
								</resource>
							</resources>
						</configuration>
						</execution>
				</executions>
			</plugin>

			
			
			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.4.0</version>
				<executions>
					<execution>
						<!--
						Generate triples from java classes
						-->
						<id>java-to-triples</id>
						<phase>process-classes</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<mainClass>com.securboration.immortals.instantiation.JavaToTriplesMain</mainClass>
							<arguments>
								<argument>${project.basedir}/../immortals-ontologies-generate/target/classes/ontology/immortals_vocab.ttl</argument>
								<argument>Turtle</argument>
								<argument>${immortals.version}</argument>
								<argument>${project.basedir}/../immortals-ontologies-generate/target/classes/</argument>
								<argument>${project.basedir}/../immortals-ontologies-vocab/src/main/java</argument>
								<argument>com.securboration.immortals.instantiation</argument>
							</arguments>
						</configuration>
					</execution>

					<execution>
						<!--
						Generate triples from object instances
						-->
						<id>instances-to-triples</id>
						<phase>process-classes</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<mainClass>com.securboration.immortals.instantiation.InstancesToTriplesMain</mainClass>
							<arguments>
								<argument>${project.basedir}/../immortals-ontologies-generate/target/classes/ontology/individuals</argument>
								<argument>${immortals.version}</argument>
								<argument>${local-repo-root}</argument>
								<argument>${repo.url}</argument>
								<argument>${immortals-lib.version}</argument>
								
								
								<!-- ATAKLite -->
								<argument>${local-repo-root}/client/ATAKLite/src</argument>
								
								<!-- core -->
								<argument>${local-repo-root}/shared/modules/core/src/main/java</argument>
								
								<!-- datatypes -->
								<argument>${local-repo-root}/shared/modules/datatypes/Coordinates/src/main/java</argument>
								<argument>${local-repo-root}/shared/modules/datatypes/LocationImage/src/main/java</argument>
								
								<!-- dfus -->
								<argument>${local-repo-root}/shared/modules/dfus/ImageUtils/src/main/java</argument>
								<argument>${local-repo-root}/shared/modules/dfus/LocationProviderAndroidGpsBuiltIn/src/main/java</argument>
								<argument>${local-repo-root}/shared/modules/dfus/LocationProviderBluetoothGpsSimulated/src/main/java</argument>
								<argument>${local-repo-root}/shared/modules/dfus/LocationProviderManualSimulated/src/main/java</argument>
								<argument>${local-repo-root}/shared/modules/dfus/LocationProviderSaasmSimulated/src/main/java</argument>
								<argument>${local-repo-root}/shared/modules/dfus/LocationProviderSimulated/src/main/java</argument>
								<argument>${local-repo-root}/shared/modules/dfus/LocationProviderUsbGpsSimulated/src/main/java</argument>
								
								<!-- converters -->
								<argument>${local-repo-root}/shared/modules/javatypeconverters/CoordinateLocationConverter/src/main/java</argument>
							</arguments>
						</configuration>
					</execution>
					
					<execution>
						<!--
						Generate triples from the deployment model
						-->
						<id>deployment-to-triples</id>
						<phase>process-classes</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<mainClass>com.securboration.immortals.instantiation.DeploymentToTriplesMain</mainClass>
							<arguments>
								<argument>${project.basedir}/../immortals-ontologies-generate/target/classes/ontology/individuals</argument>
								<argument>${immortals.version}</argument>
								<argument>${local-repo-root}</argument>
								<argument>models/sample_android/resource/webgme/immortals_kds_dm_v02_a02.json</argument>
							</arguments>
						</configuration>
					</execution>
					
				</executions>
				
			</plugin>

			<!-- 
			Exclude the classes used to create the triples, they should be included 
			as a separate dependency on the api project (i.e., this jar will contain only
			the generated triples).
			-->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>default-jar</id><!-- mandatory name -->
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<includes>
								<include>com/securboration/immortals/Anchor.class</include>
								<include>ontology/**/*</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>

	</build>

</project>
