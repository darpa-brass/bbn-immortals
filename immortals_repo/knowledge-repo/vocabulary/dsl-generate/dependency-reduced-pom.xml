<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>immortals</artifactId>
    <groupId>com.securboration</groupId>
    <version>r2.0.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>immortals-adsl-generate</artifactId>
  <name>IMMoRTALS annotation DSL generation</name>
  <url>https://dsl-external.bbn.com/tracsvr/immortals</url>
  <build>
    <defaultGoal>install</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.4.0</version>
        <executions>
          <execution>
            <id>java-to-annotation-dsl</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>com.securboration.immortals.instantiation.JavaToAnnotationsMain</mainClass>
              <arguments>
                <argument>${project.basedir}/target/classes/ontology/immortals_core.ttl</argument>
                <argument>Turtle</argument>
                <argument>${immortals.version}</argument>
                <argument>${project.basedir}/../ontology-vocab-aggregated/target/classes/</argument>
                <argument>com.securboration.immortals.instantiation,com.securboration.immortals.ontology.property.impact</argument>
                <argument>mil.darpa.immortals.annotation.dsl</argument>
                <argument>${project.basedir}/target/generated-sources</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.securboration</groupId>
            <artifactId>immortals-ontologies-vocab-instances</artifactId>
            <version>${immortals.version}</version>
            <scope>compile</scope>
          </dependency>
          <dependency>
            <groupId>com.securboration</groupId>
            <artifactId>immortals-ontologies-vocab</artifactId>
            <version>${immortals.version}</version>
            <scope>compile</scope>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.10</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>process-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${project.basedir}/target/generated-sources</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>**/log4j.properties</exclude>
                  <exclude>org.slf4j:jcl-over-slf4j:jar:1.7.12:compile</exclude>
                  <exclude>org.slf4j:slf4j-log4j12:jar:1.7.12:compile</exclude>
                </excludes>
                <includes>
                  <include>com.securboration:immortals-ontologies-vocab</include>
                  <include>com.securboration:immortals-ontologies-pojo-annotations</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <version>${install-plugin.version}</version>
        <executions>
          <execution>
            <id>install_immortals_repo</id>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>target/immortals-adsl-generate-${immortals.version}.jar</file>
              <localRepositoryPath>${local-repo-root}/IMMORTALS_REPO</localRepositoryPath>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.securboration</groupId>
      <artifactId>immortals-ontologies-vocab-instances</artifactId>
      <version>r2.0.0</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
      <version>1.7.21</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.7.21</version>
      <scope>test</scope>
      <optional>true</optional>
    </dependency>
  </dependencies>
  <properties>
    <local-repo-root>${project.basedir}/../../../shared</local-repo-root>
  </properties>
</project>

