<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>immortals</artifactId>
    <groupId>com.securboration</groupId>
    <version>r2.0.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>immortals-project-to-triples</artifactId>
  <name>immortals-project-to-triples</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>com.securboration.immortals.project2triples.ProjectToTriplesMain</mainClass>
            </manifest>
          </archive>
          <excludes>
            <exclude>org.slf4j:jcl-over-slf4j:jar:1.7.12:compile</exclude>
            <exclude>org.slf4j:slf4j-api:jar:1.7.10:compile</exclude>
            <exclude>**/log4j.properties</exclude>
            <exclude>org.slf4j:slf4j-simple:jar:*</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <excludes>
              <exclude>org.slf4j:jcl-over-slf4j:jar:1.7.12:compile</exclude>
              <exclude>org.slf4j:slf4j-api:jar:1.7.10:compile</exclude>
              <exclude>org.slf4j:slf4j-simple:*</exclude>
              <exclude>**/log4j.properties</exclude>
            </excludes>
          </artifactSet>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.10</version>
        <executions>
          <execution>
            <id>add-resource</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>add-resource</goal>
            </goals>
            <configuration>
              <resources>
                <resource>
                  <directory>${project.basedir}/gradle-plugins</directory>
                  <targetPath>META-INF/gradle-plugins</targetPath>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <version>${install-plugin.version}</version>
        <executions>
          <execution>
            <id>install_immortals_repo</id>
            <phase>install</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>target/immortals-project-to-triples-${immortals.version}.jar</file>
              <localRepositoryPath>${local-repo-root}/IMMORTALS_REPO</localRepositoryPath>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>soot-snapshot</id>
      <name>soot snapshots</name>
      <url>https://soot-build.cs.uni-paderborn.de/nexus/repository/soot-snapshot/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.gradle</groupId>
      <artifactId>gradle-core</artifactId>
      <version>3.4.1</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>gradle-base-services</artifactId>
          <groupId>org.gradle</groupId>
        </exclusion>
        <exclusion>
          <artifactId>gradle-base-services-groovy</artifactId>
          <groupId>org.gradle</groupId>
        </exclusion>
        <exclusion>
          <artifactId>gradle-messaging</artifactId>
          <groupId>org.gradle</groupId>
        </exclusion>
        <exclusion>
          <artifactId>gradle-logging</artifactId>
          <groupId>org.gradle</groupId>
        </exclusion>
        <exclusion>
          <artifactId>gradle-resources</artifactId>
          <groupId>org.gradle</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.sun</groupId>
      <artifactId>tools</artifactId>
      <version>1.5.0</version>
      <scope>system</scope>
      <systemPath>${java.home}/../jre/lib/rt.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <local-repo-root>${project.basedir}/../../../shared</local-repo-root>
  </properties>
</project>

