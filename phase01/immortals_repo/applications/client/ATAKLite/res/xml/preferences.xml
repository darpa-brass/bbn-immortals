<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
          android:title="@string/pref_server_config_title"
          android:key="@string/key_pref_server_config_title">
    <EditTextPreference
            android:title="@string/pref_server_config_host_title"
            android:key="@string/key_pref_server_config_host"
            android:summary="@string/pref_server_config_host_summary"
            android:dialogTitle="@string/pref_server_config_host_title"/>

    <EditTextPreference
            android:title="@string/pref_server_config_port_title"
            android:key="@string/key_pref_server_config_port"
            android:inputType="number"
            android:summary="@string/pref_server_config_port_summary"
            android:dialogTitle="@string/pref_server_config_port_title"/>

    <SwitchPreference
            android:title="@string/pref_server_config_sa_service_state_title"
            android:key="@string/key_pref_server_config_sa_service_state"
            android:summary="@string/pref_server_config_sa_service_state_summary"
            android:dialogTitle="@string/pref_server_config_sa_service_state_title"
            android:defaultValue="false"/>

    <EditTextPreference
            android:title="@string/pref_client_config_id_title"
            android:key="@string/key_pref_client_config_id"
            android:summary="@string/pref_client_config_id_summary"
            android:dialogTitle="@string/pref_client_config_id_title"/>
  </PreferenceCategory>
</PreferenceScreen>