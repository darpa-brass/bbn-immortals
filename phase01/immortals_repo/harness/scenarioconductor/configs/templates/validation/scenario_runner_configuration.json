{
    "sessionIdentifier": "{sessionIdentifier}",
    "deploymentDirectory": "{runtimeRoot}/{sessionIdentifier}/deployment_environment/",
    "scenario": {
        "scenarioIdentifier": "validation",
        "durationMS": 60000,
        "deploymentApplications": [
            {
                "applicationIdentifier": "marti",
                "instanceIdentifier": "martiRouter",
                "deploymentPlatformEnvironment": "java_local",
                "buildRoot": "applications/server/Marti/",
                "executableFile": "applications/server/Marti/Marti-immortals.jar",
                "applicationDeploymentDirectory": "{deploymentDirectory}{instanceIdentifier}/",
                "files": {
                    "harness/scenarioconductor/configs/templates/validation/marti-CoreConfig.xml": "{applicationDeploymentDirectory}CoreConfig.xml"
                },
                "filesForCleanup": [
                    "{deploymentDirectory}{instanceIdentifier}"
                ],
                "configurationCustomizations": {
                }
            }
        ],
        "validatorIdentifiers": [
            "client-location-produce",
            "client-location-share",
            "client-location-source-trusted",
            "client-location-trusted",
            "client-location-source-usb",
            "client-location-source-bluetooth",
            "client-location-source-androidgps",
            "client-location-source-manual",
            "client-image-produce",
            "client-image-share"
        ]
    },
    "validate": true,
    "startEmulatorsSimultaneously": true,
    "swallowAndShutdownOnException": true,
    "minDurationMS": 60000,
    "debugMode": false,
    "lifecycle": {
        "setupEnvironment": true,
        "setupApplications": true,
        "executeScenario": true,
        "haltEnvironment": false
    },
    "setupEnvironmentLifecycle": {
        "destroyExisting": false,
        "cleanExisting": true
    }
}
