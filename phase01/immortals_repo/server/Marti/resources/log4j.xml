<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!-- <param name="ConversionPattern" value="[%d{dd/MM/yy hh:mm:ss:sss z}] %-5p %c{1} - %m%n"/> -->
            <param name="ConversionPattern" value="[%d{yyyy/MM/dd hh:mm:ss:sss z}] %-5p - %m%n"/>
        </layout>
    </appender>


    <appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/marti.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{yyyy/MM/dd hh:mm:ss:sss z}] %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <!-- exclude 'warn' level for repo service -->
    <logger name="com.bbn.marti.service.RepositoryService">
        <level value="error"/>
    </logger>

    <root>
        <priority value="info"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </root>

</log4j:configuration>
